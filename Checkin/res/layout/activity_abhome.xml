<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:checkin="http://schemas.android.com/apk/res/com.mavericks.checkin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_sm"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/img_profile"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginTop="@dimen/margin_sl"
            android:layout_toRightOf="@id/img_profile"
            android:gravity="center|left"
            android:orientation="vertical" >

            <com.mavericks.checkin.views.HCTextView
                android:layout_width="@dimen/dlg_width"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_s"
                checkin:font_type="@integer/fnt_welcome"
                android:gravity="left"
                android:text="@string/welcome" />

            <com.mavericks.chexckin.views.HCTextView
                android:id="@+id/txt_name"
                android:layout_width="@dimen/dlg_width"
                android:layout_height="wrap_content"
                checkin:font_type="@integer/fnt_hm_nm"
                android:gravity="left" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_sl"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/img_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ss"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_ss"
            android:gravity="top"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              />

            <ImageView
                android:id="@+id/img_lifestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ss"
               />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>