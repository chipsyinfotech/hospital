<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:checkin="http://schemas.android.com/apk/res/com.mavericks.checkin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_ms"
        android:background="@drawable/img_info_icon"
        android:contentDescription="@string/about" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_ms"
        android:contentDescription="@string/about"
        android:src="@drawable/logo" />
      <com.mavericks.checkin.views.HCTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_ms"
            checkin:font_type="@integer/fnt_info"
            android:text="@string/hospital_info" />

        <com.mavericks.checkin.views.HCTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center_horizontal"
              checkin:font_type="@integer/fnt_info"
            android:layout_marginTop="@dimen/margin_ms"
            android:text="@string/hos_info" />
           <com.mavericks.checkin.views.HCTextView
               android:id="@+id/txt_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center_horizontal"
              checkin:font_type="@integer/fnt_text"
            android:layout_marginTop="@dimen/margin_ss"
            android:text="@string/read" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/margin_mx"
        android:layout_marginLeft="@dimen/margin_ls"
        android:layout_marginRight="@dimen/margin_ls"
        android:gravity="bottom"
        android:orientation="vertical" >

      

        <com.mavericks.checkin.views.HCButton
            android:id="@+id/btn_sel_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/tabsl"
            android:drawableLeft="@drawable/location_icon"
            android:drawableRight="@drawable/drop_down_icon"
            android:gravity="center|left"
            android:text="@string/sel_location"
             checkin:font_type="@integer/fnt_info"
            android:textColor="@android:color/black" />

        <com.mavericks.checkin.views.HCButton
            android:id="@+id/btn_sel_hos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/tabsl"
            android:drawableLeft="@drawable/select_hospital_icon"
            android:drawableRight="@drawable/drop_down_icon"
            android:gravity="center|left"
            android:text="@string/hospital_prompt"
            checkin:font_type="@integer/fnt_info"
            android:textColor="@android:color/black" />

        <com.mavericks.checkin.views.HCTextView
            android:id="@+id/text_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/tabsl"
            android:gravity="center_horizontal"
            android:text="@string/proceed"
            checkin:font_type="@integer/fnt_texts" />
    </LinearLayout>

</LinearLayout>