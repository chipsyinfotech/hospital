<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:checkin="http://schemas.android.com/apk/res/com.mavericks.checkin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_ss"
        android:contentDescription="@string/about" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_sx"
         android:layout_marginTop="@dimen/margin_ss"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.mavericks.checkin.views.HCTextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            checkin:font_type="@integer/fnt_sug" />

        <com.mavericks.checkin.views.HCTextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            checkin:font_type="@integer/fnt_sug" />

    </LinearLayout>

</LinearLayout>