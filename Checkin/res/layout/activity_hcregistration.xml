                    android:id="@+id/spinner_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ms"
                    android:prompt="@string/date" />
            </LinearLayout>

            <ImageView
