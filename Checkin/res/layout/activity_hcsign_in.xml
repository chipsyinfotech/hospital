<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:checkin="http://schemas.android.com/apk/res/com.mavericks.checkin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   
    android:layout_height="match_parent"
    android:background="@drawable/white_bar"
    android:orientation="vertical"
    tools:context="com.mavericks.checkin.HCSignInActivity" >

    <com.mavericks.checkin.views.HCTextView
        android:id="@+id/text_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_ms"
        android:gravity="center"
        android:text="@string/login"
        checkin:font_type="@integer/fnt_log" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_log"
        android:gravity="center" >

        <ImageView
            android:id="@+id/div_lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xs"
            android:background="@drawable/divider_line"
            android:contentDescription="@string/about" />

        <LinearLayout
            android:id="@+id/lin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div_lin2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginTop="@dimen/margin_xs"
                android:contentDescription="@string/about"
                android:src="@drawable/email_icon" />

            <com.mavericks.checkin.views.HCEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginTop="@dimen/margin_xs"
                
                android:background="@android:color/transparent"
                android:hint="@string/hemail"
                android:inputType="textEmailAddress"
                checkin:font_type="@integer/fnt_edit_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/div_lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_layout"
            android:layout_marginTop="@dimen/margin_ls"
            android:background="@drawable/divider_line"
            android:contentDescription="@string/about" />

        <LinearLayout
            android:id="@+id/lin_layouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div_lin3"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginTop="@dimen/margin_xs"
                android:contentDescription="@string/about"
                android:src="@drawable/digital_pin_icon" />

            <com.mavericks.checkin.views.HCEditText
                android:id="@+id/edt_digit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginTop="@dimen/margin_xs"
                android:background="@android:color/transparent"
                android:hint="@string/digit"
                android:inputType="numberPassword"
                android:maxLength="4"
                checkin:font_type="@integer/fnt_edit_small" />
        </LinearLayout>

        <ImageView
            android:id="@+id/div_lin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_layouts"
            android:layout_marginTop="@dimen/margin_ls"
            android:background="@drawable/divider_line"
            android:contentDescription="@string/about" />

        <com.mavericks.checkin.views.HCTextView
            android:id="@+id/text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/div_lin4"
            android:layout_marginTop="@dimen/margin_xs"
            android:text="@string/forpaswrd"
            checkin:font_type="@integer/fnt_texts" />

        <com.mavericks.checkin.views.HCButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_password"
            android:layout_marginTop="@dimen/margin_xs"
            android:contentDescription="@string/about"
            android:background="@drawable/check"
            android:layout_alignParentRight="true"
            android:text="@string/login"
            checkin:font_type="@integer/fnt_login" />
    </RelativeLayout>

</RelativeLayout>